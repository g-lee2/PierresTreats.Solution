@{
  Layout = "_Layout";
}

@model Bakery.Models.Treat

<h4>Add a new treat</h4>

<p>@Html.ValidationMessageFor(model => model.Name)</p>
<p>@Html.ValidationMessageFor(model => model.Price)</p>

@using (Html.BeginForm())
{
  @Html.Label("Name")
  @Html.TextBoxFor(model => model.Name)
  @Html.Label("Description")
  @Html.TextAreaFor(model => model.Description)
  @Html.Label("Price")
  @Html.TextBoxFor(model => model.Price, new { @type = "number", @step = "0.01" })

  <input type="submit" value="Add a new treat" class="btn btn-default">
}
