@{
  Layout = "_Layout";
}

@using Bakery.Models;

<h1>Treats</h1>

@if (@Model.Count == 0)
{
  <h3>No treats added!</h3>
}

<ul>
  @foreach (Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId }) </li>
  }
</ul>

<button>@Html.ActionLink("Add a new treat", "Create")</button>

