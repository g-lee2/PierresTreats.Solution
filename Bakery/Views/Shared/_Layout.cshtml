<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Pierre's Sweet and Savory Treats</title>
    <link rel="stylesheet" 
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" 
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" 
      crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Karla:wght@400;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">

  </head>
  <body>
    <div class="navbar">
      <h1>Pierre's Bakery</h1>
      @if (User.Identity.IsAuthenticated)
      {
        <p>@Html.ActionLink("Home", "Index", "Home")</p>
        <p>@Html.ActionLink("Treats", "Index", "Treats")</p>
        <p>@Html.ActionLink("Flavors", "Index", "Flavors")</p>
        <p>@Html.ActionLink("Account Home", "Index", "Account")</p>
        @using (Html.BeginForm("LogOff", "Account"))
        {
          <input type="submit" value="Log out" />
        }
      }
      else 
      {
        <p>@Html.ActionLink("Home", "Index", "Home")</p>
        <p>@Html.ActionLink("Log In", "Login", "Account")</p>
        <p>@Html.ActionLink("Sign Up", "Register", "Account")</p> 
      }
    </div>
    <hr />
    @RenderBody()
  </body>
</html>
